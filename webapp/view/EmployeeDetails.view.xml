<mvc:View
    controllerName="employee.directory.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="employeeDetailsContainer"
        title="Employee Details"
        showNavButton="true"
        showHeader="true"
        navButtonPress="onNavBack"
    >
        <headerContent>
            <Button
                id="btnHeaderHelpDetails"
                text="Help"
            />
        </headerContent>
        <content>
            <VBox
                id="employeeDetailsBox"
                class="sapUiSmallMargin"
            >
                <Text
                    id="employeeName"
                    text="{selectedEmployeeModel>name}"
                    class="sapUiLargeMarginBottom"
                />
                <Text
                    id="employeeRole"
                    text="{selectedEmployeeModel>role}"
                    class="sapUiMediumMarginBottom"
                />
                <Text
                    id="employeeEmail"
                    text="{selectedEmployeeModel>email}"
                    class="sapUiMediumMarginBottom"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
